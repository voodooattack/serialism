{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "es2017",
    "module": "es2015",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noEmit": true
  },
  "include": ["src"]
}
